<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/vs_item_height"
              android:paddingLeft="@dimen/vs_item_padding"
              android:paddingRight="@dimen/vs_item_padding"
              android:layout_gravity="center_vertical"
              android:background="@drawable/shape_focus"
              android:focusable="true"
              android:focusableInTouchMode="false"
              android:orientation="horizontal">
    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvChannelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_item"/>
        <com.lzlown.iptv.ui.tv.widget.MarqueeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvChannelEpg"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginStart="60dp"/>
    </LinearLayout>
</LinearLayout>
