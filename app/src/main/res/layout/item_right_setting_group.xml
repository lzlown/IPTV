<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="@dimen/vs_item_height"
              android:focusable="true"
              android:paddingLeft="@dimen/vs_item_padding"
              android:paddingRight="@dimen/vs_item_padding"
              android:focusableInTouchMode="false"
              android:background="@drawable/shape_focus"
              android:gravity="center_vertical"
              android:orientation="horizontal">
    <TextView
            android:id="@+id/tvSettingGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ts_item"/>
    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swh_status"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/vs_item_content_margin"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track_style"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:checked="false"
            android:clickable="false"
            tools:ignore="RtlHardcoded,UseSwitchCompatOrMaterialXml"/>
    <TextView
            android:id="@+id/tvSettingGroupVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:layout_marginStart="@dimen/vs_item_content_margin"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:ignore="RtlHardcoded"/>
    <ImageView
            android:id="@+id/tvSettingGroupLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_chevron_right_24_white" />
</LinearLayout>