<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10mm"
    android:layout_marginBottom="10mm"
    android:background="@drawable/shape_live_focus"
    android:layout_marginLeft="10mm"
    android:layout_marginRight="10mm"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <LinearLayout
            android:id="@+id/tvChannelName_Lay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvChannelNum"
                android:layout_width="60mm"
                android:layout_height="30mm"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="26mm"/>
        <TextView
                android:id="@+id/tvChannelName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="left"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="26mm"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/tvChannelName_Epg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.lzlown.iptv.ui.tv.widget.MarqueeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvChannelEpg"
                android:textColor="@android:color/white"
                android:textSize="17mm"
                android:layout_marginLeft="60mm"
                android:layout_marginTop="5mm"
                android:layout_marginBottom="10mm"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>