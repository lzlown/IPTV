<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/shape_focus"
              android:focusable="true"
              android:paddingLeft="@dimen/vs_5"
              android:paddingRight="@dimen/vs_5"
              android:focusableInTouchMode="false"
              android:layout_width="match_parent"
              android:layout_height="@dimen/vs_70">
    <TextView
            android:id="@+id/tvChannelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ts_26"/>
    <com.lzlown.iptv.ui.tv.widget.MarqueeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvChannelEpg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ts_18"
            android:layout_marginStart="@dimen/vs_60"/>
</LinearLayout>
