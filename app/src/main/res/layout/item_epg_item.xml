<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:focusable="true"
              android:focusableInTouchMode="false"
              android:layout_height="@dimen/vs_item_height"
              android:paddingLeft="@dimen/vs_item_padding"
              android:paddingRight="@dimen/vs_item_padding"
              android:background="@drawable/shape_focus"
              android:gravity="center_vertical"
              android:layout_width="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
                android:textSize="18sp"
                android:id="@+id/tv_epg_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>
        <com.lzlown.iptv.ui.tv.widget.MarqueeTextView
                android:textSize="@dimen/ts_item"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:id="@+id/tv_epg_name"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:id="@+id/tv_epg_re_reading"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_marginStart="@dimen/vs_item_content_margin"
            android:gravity="center"
            android:text="回看"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:ignore="HardcodedText"/>
</LinearLayout>

