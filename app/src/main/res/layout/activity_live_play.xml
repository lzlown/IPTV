<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:id="@+id/live_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.lzlown.iptv.videoplayer.player.VideoView
            android:id="@+id/mVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <!--回放进度条-->
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vs_200"
            android:layout_marginRight="@dimen/vs_200"
            android:layout_marginBottom="@dimen/vs_30"
            android:layout_gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:id="@+id/seekbar"
            android:background="@drawable/bg_channel"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_currentpos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="00:00:00"
                android:textColor="#fff"/>
        <SeekBar
                android:id="@+id/pb_progressbar"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:maxHeight="3dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_style"
                android:minHeight="3dp"
                android:thumb="@drawable/transparent"
                android:thumbOffset="0dp"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

        <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="00:00:00"
                android:textColor="#fff"/>
    </LinearLayout>
    <!--频道序号显示-->
    <LinearLayout
            android:layout_gravity="bottom|center"
            android:gravity="center_vertical"
            android:id="@+id/ll_epg"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_channel"
            android:layout_width="@dimen/vs_520"
            android:layout_height="@dimen/vs_100">
        <TextView
                android:text="重庆重庆重庆"
                android:layout_width="@dimen/vs_160"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:id="@+id/tv_channel_bar_name"
                android:gravity="center"
                android:textSize="@dimen/ts_20"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:textSize="@dimen/ts_22"
                        android:textColor="@color/color_FFFFFF"
                        android:ellipsize="marquee"
                        android:id="@+id/tv_current_program_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:singleLine="true"/>
                <com.lzlown.iptv.ui.tv.widget.MarqueeTextView
                        android:id="@+id/tv_current_program_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/vs_10"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="预告"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/ts_22"/>
            </LinearLayout>

            <View
                    android:background="@color/color_FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vs_1"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:textSize="@dimen/ts_22"
                        android:textColor="@color/color_FFFFFF"
                        android:id="@+id/tv_next_program_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:singleLine="true"
                        android:ellipsize="marquee"/>
                <com.lzlown.iptv.ui.tv.widget.MarqueeTextView
                        android:id="@+id/tv_next_program_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/vs_10"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="预告"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/ts_22"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
            android:layout_gravity="right|top"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_26"
            android:text="tvName"
            android:textColor="@color/color_text_none"
            android:layout_marginTop="@dimen/vs_35"
            android:layout_marginRight="@dimen/vs_10">

    </TextView>
    <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/vs_5"
            android:layout_marginRight="@dimen/vs_10"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="tvTime"
            android:textColor="@color/color_text_none"
            android:textSize="@dimen/ts_22"/>
    <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/vs_5"
            android:layout_marginRight="@dimen/vs_10"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="tvSpeed"
            android:textColor="@color/color_text_none"
            android:textSize="@dimen/ts_22"/>
    <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/vs_30"
            android:layout_marginRight="@dimen/vs_30"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@color/color_text_none"
            android:textSize="@dimen/ts_22"
            android:text="回放"/>
    <!--左侧节目-->
    <LinearLayout
            android:id="@+id/tvLeftChannnelListLayout"
            android:layout_width="430mm"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:background="@drawable/bg_channel_left">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
            <com.owen.tvrecyclerview.widget.TvRecyclerView
                    android:id="@+id/mGroupGridView"
                    android:layout_width="@dimen/vs_140"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:fadeScrollbars="false"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:padding="@dimen/vs_10"
                    android:scrollbars="none"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="@dimen/vs_1"
                android:layout_height="match_parent"
                android:background="@color/color_FFFFFF"/>
        <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/mChannelGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/vs_5"
                android:scrollbars="none"/>
    </LinearLayout>
    <!--右侧设置-->
    <LinearLayout
            android:id="@+id/tvRightSettingLayout"
            android:layout_width="@dimen/vs_361"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/bg_channel_right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/mSettingItemView"
                android:layout_width="@dimen/vs_180"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:divider="@null"
                android:fadeScrollbars="false"
                android:padding="@dimen/vs_10"
                android:gravity="center"
                android:scrollbars="none"/>

        <View
                android:layout_width="@dimen/vs_1"
                android:layout_height="match_parent"
                android:background="@color/color_FFFFFF"/>

        <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/mSettingGroupView"
                android:layout_width="@dimen/vs_180"
                android:layout_height="match_parent"
                android:divider="@null"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/vs_10"
                android:gravity="center"
                android:scrollbars="none"/>
    </LinearLayout>
    <!--左侧回放-->
    <LinearLayout
            android:id="@+id/divEPG"
            android:layout_width="930mm"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:focusable="false"
            android:background="@drawable/bg_channel_left"
            android:orientation="horizontal">
        <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/mEpgChannelView"
                android:layout_width="@dimen/vs_300"
                android:layout_height="match_parent"
                android:divider="@null"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/vs_5"
                android:scrollbars="none"
                />
<!--        app:tv_selectedItemIsCentered="true"-->
        <View
                android:layout_width="@dimen/vs_1"
                android:layout_height="match_parent"
                android:background="@color/color_FFFFFF"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
            <com.owen.tvrecyclerview.widget.TvRecyclerView
                    android:id="@+id/mEpgDateGridView"
                    android:layout_width="@dimen/vs_140"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:fadeScrollbars="false"
                    android:padding="@dimen/vs_10"
                    android:scrollbars="none"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="@dimen/vs_1"
                android:layout_height="match_parent"
                android:background="@color/color_FFFFFF"/>
        <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/lv_epg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:fadeScrollbars="false"
                android:padding="@dimen/vs_5"
                android:scrollbars="none"/>
        <TextView
                android:text="暂无信息"
                android:layout_height="match_parent"
                android:textColor="@color/color_text_none"
                android:id="@+id/no_epg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textSize="@dimen/ts_26"/>

    </LinearLayout>
</FrameLayout>