<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:id="@+id/home_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_loading"
            android:background="@drawable/home_bg"
            android:visibility="invisible">
        <ProgressBar
                android:id="@+id/loadingBar"
                android:layout_width="@dimen/vs_40"
                android:layout_height="@dimen/vs_40"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/vs_8"
                android:layout_marginRight="@dimen/vs_20"
                android:indeterminateTint="@color/color_selected"
                android:visibility="visible"/>
        <TextView
                android:text="加载失败"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loadErr"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/vs_8"
                android:textSize="@dimen/vs_24"
                android:visibility="gone"/>
    </RelativeLayout>
</FrameLayout>