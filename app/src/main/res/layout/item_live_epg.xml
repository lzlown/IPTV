<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="bottom"
              android:background="@drawable/shape_live_focus"
              android:focusable="true"
              android:focusableInTouchMode="false"
              android:layout_width="match_parent"
              android:layout_margin="@dimen/vs_10"
              android:layout_height="@dimen/vs_70">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
        <TextView
                android:textSize="@dimen/vs_18"
                android:id="@+id/tv_epg_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>

        <com.lzlown.iptv.ui.tv.widget.MarqueeTextView
                android:textSize="@dimen/vs_20"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:gravity="center|left"
                android:id="@+id/tv_epg_name"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
            android:id="@+id/goback"
            android:layout_width="@dimen/vs_60"
            android:layout_height="@dimen/ts_26"
            android:layout_marginLeft="@dimen/vs_10"
            android:gravity="center"
            android:background="@drawable/shape_live_focus"
            android:layout_gravity="center_vertical"
            android:text="回看"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/vs_15"/>

</LinearLayout>

